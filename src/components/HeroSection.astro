---
import { cn } from "@lib/utils";
import Container from "./Container.astro";
import { button } from "@tailus/themer-button";
import Frame from "./Frame.astro";
---

<section class="relative overflow-hidden scroll-mt-24" id="home">
  <div
    aria-hidden
    class="opacity-0 dark:opacity-25 absolute [background-image:radial-gradient(theme(colors.gray.500),transparent_50%)] top-0 w-[1000px] z-10 h-[800px] left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none"
  >
  </div>
  <Container>
    <div class="relative pt-32 sm:pt-44 ml-auto">
      <div class="lg:w-2/3 text-center mx-auto">
        <h1
          class="text-gray-900 dark:text-white font-bold text-4xl sm:text-5xl md:text-6xl"
        >
          We Help People Find Bettr Friends
        </h1>
        <p class="max-w-xl mx-auto mt-8 text-gray-700 dark:text-gray-300"></p>
        <div class="mt-8 flex flex-wrap justify-center gap-y-4 gap-x-6">
          <Frame>
            <a
              href="/view"
              class={cn(button.primary.lg, "relative z-[1] bg-[#FFD700]/60")}
            >
              Start Finding Your Best Friend
            </a>
          </Frame>
        </div>
        <div
          class="py-8 mt-16 gap-4 border-y dark:border-gray-800 flex-wrap flex justify-between"
        >
          <div class="text-left">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-cuboid"
              ><path
                d="m21.12 6.4-6.05-4.06a2 2 0 0 0-2.17-.05L2.95 8.41a2 2 0 0 0-.95 1.7v5.82a2 2 0 0 0 .88 1.66l6.05 4.07a2 2 0 0 0 2.17.05l9.95-6.12a2 2 0 0 0 .95-1.7V8.06a2 2 0 0 0-.88-1.66Z"
              ></path><path d="M10 22v-8L2.25 9.15"></path><path
                d="m10 14 11.77-6.87"></path></svg
            >
            <h2
              class="my-2 text-base font-semibold text-gray-700 dark:text-white"
            >
              Detailed 3D Models
            </h2>
            <p class="text-gray-600 dark:text-gray-400 text-sm max-w-[20ch]">
              We use state of the art scanning to bring your friend to life
            </p>
          </div>
          <div class="text-left">
            <svg
              <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-sparkles"
              ><path
                d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"
              ></path><path d="M20 3v4"></path><path d="M22 5h-4"></path><path
                d="M4 17v2"></path><path d="M5 18H3"></path></svg
            >

            <h2
              class="my-2 text-base font-semibold text-gray-700 dark:text-white"
            >
              State of the Art AI
            </h2>
            <p class="text-gray-600 dark:text-gray-400 text-sm max-w-[20ch]">
              We use the latest in AI to make sure your friend is always there
              for you
            </p>
          </div>
          <div class="text-left">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-heart-handshake"
              ><path
                d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
              ></path><path
                d="M12 5 9.04 7.96a2.17 2.17 0 0 0 0 3.08c.82.82 2.13.85 3 .07l2.07-1.9a2.82 2.82 0 0 1 3.79 0l2.96 2.66"
              ></path><path d="m18 15-2-2"></path><path d="m15 18-2-2"
              ></path></svg
            >
            <h2
              class="my-2 text-base font-semibold text-gray-700 dark:text-white"
            >
              The most loved
            </h2>
            <p class="text-gray-600 dark:text-gray-400 text-sm max-w-[20ch]">
              We have the most loved friends in the world
            </p>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
